{
  "name": "btc-currency",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "build:service-app": "cd apps/service-app && npm install && npm run build",
    "build:worker-app": "cd apps/worker-app && npm install && npm run build",
    "build:docker": "npm run db:generate-client && docker-compose build",
    "format": "prettier --check --ignore-unknown \"{src,apps,libs,test}/**/*.ts\" \"{src,apps,libs,test}/**/*.ts\"",
    "format:fix": "prettier --write \"{src,apps,libs,test}/**/*.ts\" \"{src,apps,libs,test}/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "start": "nest start",
    "start:worker:dev": "nest start worker-app --watch",
    "start:servise:dev": "nest start service-app --watch",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/btc-currency/main",
    "start:app": "docker-compose up -d",
    "stop:app": "docker-compose down",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/btc-currency/test/jest-e2e.json",
    "start-db": "docker-compose up -d database",
    "db:migrate:dev": "prisma migrate dev --update --schema=./libs/lib/src/prisma/schema.prisma",
    "db:generate-client": "npx prisma generate --schema=./libs/lib/src/prisma/schema.prisma",
    "db:migrate:deploy": "prisma migrate deploy --schema=./libs/lib/src/prisma/schema.prisma"
  },
  "dependencies": {
    "@nestjs-modules/mailer": "^1.10.3",
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@prisma/client": "^5.7.1",
    "@sendgrid/mail": "^8.1.0",
    "axios": "^1.6.5",
    "coingecko-api": "^1.0.10",
    "nestjs-pino": "^4.0.0",
    "nodemailer": "^6.9.8",
    "pino": "^8.17.2",
    "prisma": "^5.7.1",
    "prom-client": "^15.1.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/nodemailer": "^6.4.14",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/lib(|/.*)$": "<rootDir>/libs/lib/src/$1"
    }
  }
}
